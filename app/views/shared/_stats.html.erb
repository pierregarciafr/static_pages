<% user = @user ||= current_user %> <!-- la condition n'opÃ¨re que si @user.nil? -->
<div id="stats">
  <div class="px-3 d-flex justify-content-between">
    <div class="flex-grow-1">
      <div class="text-center border-right">
        <strong><%= link_to user.following.any? ? user.following.count : 0, following_user_path(user) %></strong><br/>
        Following
      </div>
    </div>
    <div class="flex-grow-1">
      <div class="text-center">
        <strong><%= link_to user.followers.any? ? user.followers.count : 0, followers_user_path(user) %></strong><br/>
        Followers
      </div>
    </div>
  </div>
</div>
