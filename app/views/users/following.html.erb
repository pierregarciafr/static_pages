<% provide(:title, 'Following') %>

<div class="row">

  <div class="col-md-2"></div>

  <div class="col-md-4">
    <aside>
      <section class="user_info">
        <div class="user_id">
          <%= render 'shared/user_info', user: current_user %>
        </div>
        <div class="follow_info">
          <%= render 'shared/stats' %> <!-- , user: current_user -->
        </div>
      </section>
      <section class="mt-5">
        <div id="avatar_collection" class="d-flex flex-wrap align-content-center justify-content-between">
          <% @users.each do |user| %>

            <% gr_id = Digest::MD5::hexdigest(user.email.downcase) %>
            <%= image_tag("https://secure.gravatar.com/avatar/#{gr_id}?s=50vh",
             alt: user.name, class: 'case') %>
          <% end %>
        </div>
      </section>
    </aside>
  </div>

  <div class="col-md-4">
    <h3>Following</h3>
        <%= will_paginate @users, class: 'pagination' %>

    <ul id="users-list" class="users">
      <%= render @users %>
    </ul>
        <%= will_paginate @users, class: 'pagination' %>

  </div>
  <div class="col-md-4"></div>
</div>

