<% provide(:title, 'Following') %>

<div class="row pt-5">

  <div class="col-md-2"></div>

  <div class="col-md-4">
    <aside>
      <section class="user_info">
        <div class="user_id">
          <%= render 'shared/user_info', user: current_user %>
        </div>
        <div class="follow_info">
          <%= render 'shared/stats' %> <!-- , user: current_user -->
        </div>
      </section>
      <section id="avatar_collection" class="mt-5">
        <% @users.each do |user| %>
          <% gr_id = Digest::MD5::hexdigest(user.email.downcase) %>
          <%= image_tag("https://secure.gravatar.com/avatar/#{gr_id}?s=40",
           alt: user.name, class: 'case') %>
        <% end %>
      </section>
    </aside>
  </div>

  <div class="col-md-4">
    <h3>Following</h3>
        <%= will_paginate @users, class: 'pagination' %>

    <ul id="users-list" class="users">
      <%= render @users %>
    </ul>
        <%= will_paginate @users, class: 'pagination' %>

  </div>
  <div class="col-md-4"></div>
</div>

