<li id="micropost-<%= micropost.id %>" class="micropost-strip">
  <div class="avatar">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  </div>
  <div class="text">
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content"><%= link_to micropost.content %></span>

    <% if micropost.user == current_user %>
      <div class="mt-2 d-flex justify-content-between">
        <span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago</span>
        <span class="delete"><%= link_to "Delete", micropost_path(micropost), method: :delete, data: { confirm: "You sure ?"} %></span>
      </div>
    <% else %>
        <span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago</span>
    <% end %>

  </div>
</li>


